{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/*.{json,jpg,jpeg,png,gif,ico,css,js,svg,woff,woff2,ttf,eot}"]
  },
  "mimeTypes": {
    ".json": "text/json",
    ".wasm": "application/wasm"
  },
  "auth": {
    "rolesSource": "/api/auth/me",
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "google": {
          "registration": {
            "clientIdSettingName": "GOOGLE_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "GOOGLE_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://accounts.google.com/.well-known/openid-configuration"
            }
          }
        }
      }
    }
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self'; connect-src 'self' https://accounts.google.com https://jobtracker-api.azurewebsites.net; frame-ancestors 'none'; base-uri 'self'; form-action 'self'",
    "x-content-type-options": "nosniff",
    "x-frame-options": "DENY",
    "x-xss-protection": "1; mode=block",
    "referrer-policy": "strict-origin-when-cross-origin",
    "permissions-policy": "geolocation=(), microphone=(), camera=()"
  },
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/auth/*",
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedRoles": ["unauthenticated", "authenticated"]
    },
    {
      "route": "/*",
      "methods": ["GET"],
      "allowedRoles": ["unauthenticated", "authenticated"]
    }
  ]
}
